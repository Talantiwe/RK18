<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Window" Height="400" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBox Name="chatTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="419" Height="177" Margin="10,0,0,0"/>
            <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" RenderTransformOrigin="0.64,-2.199" Margin="10,0,0,10"/>
            <Label Content="Имя" HorizontalAlignment="Left" Height="23" Margin="10,182,0,0" VerticalAlignment="Top" Width="64"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBox Name="messageTextBox" HorizontalAlignment="Left" Width="302" Height="56" VerticalAlignment="Top" Margin="10,38,0,0"/>
            <Button Content="Отправить" Name="sendButton" VerticalAlignment="Top" Height="56" Click="sendButton_Click" Margin="373,38,57,0"/>
            <Label Content="Сообщение" HorizontalAlignment="Left" Height="33" Margin="10,0,0,0" VerticalAlignment="Top" Width="96"/>
        </Grid>

    </Grid>
</Window>
